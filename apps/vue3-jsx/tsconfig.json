{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@yev-stater/tsconfig/web-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "noImplicitAny": false
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.d.ts",
    "*.mts",
    "types",
    "tsconfig.node.json"
  ],
  "exclude": ["node_modules"]
}
